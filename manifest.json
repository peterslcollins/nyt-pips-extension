{
  "manifest_version": 3,
  "name": "Pips Solver",
  "version": "1.0",
  "description": "Reads the Pips puzzle board and displays info about the dominoes.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.nytimes.com/games/pips/*"],
      "js": ["solverScript.js"]
    }
  ]
}
